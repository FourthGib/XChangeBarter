<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <Button
        android:id="@+id/notif_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications Back"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="269dp" />

    <LinearLayout
        android:id="@+id/notif_home_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="670dp">

        <ImageView
            android:id="@+id/notif_home_btn"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/home_icon"
            />

        <ImageView
            android:id="@+id/notif_notification_btn"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/ic_bell"
            />

        <ImageView
            android:id="@+id/notif_inventory_btn"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/ic_inventory"
            />

        <ImageView
            android:id="@+id/notif_profile_btn"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/ic_profile"
            />

    </LinearLayout>

</RelativeLayout>